<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="viewModel"
                type="kz.nextstep.tazalykpartners.ui.pinComments.PinCommentsViewModel"/>
    </data>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.pinComments.PinCommentsActivity">
        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/layout_pin_comments_appbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:title="@string/comments"
                    app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pin_comments_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                adapter="@{viewModel.getPinCommentsAdapter()}"
                android:paddingStart="@dimen/standard_16"
                android:paddingEnd="@dimen/standard_16"/>
    </LinearLayout>
</layout>