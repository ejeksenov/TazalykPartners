<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/standard_22"
        tools:context=".ui.editProfile.ChangePasswordFragment">

    <EditText
            android:id="@+id/edt_change_user_password_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/current_password"/>

    <EditText
            android:id="@+id/edt_change_user_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/standard_22"
            android:hint="@string/new_password"/>

    <EditText
            android:id="@+id/edt_change_user_password_confirm_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/standard_22"
            android:hint="@string/confirm_new_password"/>

    <Button
            android:id="@+id/btn_change_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/rounded_corner_active_button"
            android:layout_marginTop="@dimen/standard_22"/>

</LinearLayout>