<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/layout_filter_by_type_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_cornered_filter_grid_item">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <ImageView
                android:id="@+id/iv_filter_by_type_item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/standard_10"
                android:background="@null"
                android:src="@drawable/ic_info_outline_gray_24dp"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">
            <ImageView
                    android:id="@+id/iv_filter_by_type_item_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="@color/not_selected_grid_item_color"
                    android:scaleType="fitCenter"/>
            <TextView
                    android:id="@+id/tv_filter_by_type_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_5"
                    android:textSize="16sp"
                    android:textColor="@color/grayColor"
                    android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>