<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="@dimen/standard_16">

    <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainBackgroundColor">

        <ImageButton
                android:id="@+id/iv_filter_by_type_item_info_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/standard_8"
                android:background="@null"
                android:src="@drawable/ic_close_white_24dp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/standard_16"
                android:layout_marginBottom="@dimen/standard_8"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_filter_by_type_item_info_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/paper"
                    android:tint="@color/white" />

            <TextView
                    android:id="@+id/tv_filter_by_type_item_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_5"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
            android:id="@+id/tv_filter_by_type_item_info_detailed_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:layout_margin="@dimen/standard_16"
            android:textColor="@color/textColor" />

    <Button
            android:id="@+id/btn_filter_by_type_item_info_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_30"
            android:layout_marginRight="@dimen/standard_30"
            android:background="@drawable/background_round_bordered_button"
            android:text="@string/clear"
            android:textColor="@color/mainBackgroundColor"
            android:textSize="14sp"
            android:textStyle="bold|normal" />
</LinearLayout>