<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_passed_waste_type_total_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp">
    <TextView
            android:id="@+id/tv_passed_waste_type"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="start|center"
            android:textSize="16sp"
            android:paddingStart="@dimen/standard_8"
            android:paddingEnd="@dimen/standard_8"
            android:textColor="@color/textColor"
            android:layout_centerVertical="true"/>
    <TextView
            android:id="@+id/tv_passed_waste_type_total"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_passed_waste_type_total_delete" />
    <ImageButton
            android:id="@+id/btn_passed_waste_type_total_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_remove_circle_outline_red"
            android:background="@color/transparent"
            android:padding="@dimen/standard_8"/>
</RelativeLayout>